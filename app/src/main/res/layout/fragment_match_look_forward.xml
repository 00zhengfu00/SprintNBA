<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/snlScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMaxPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/title_layout"
            android:gravity="center"
            android:padding="3dp"
            android:text="球队数据王" />

        <RelativeLayout
            android:id="@+id/rlMatchTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvLeftTeamName"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@color/white"
                android:gravity="center"
                android:text="雷霆"
                android:textColor="@color/primary_text"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvRightTeamName"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:gravity="center"
                android:text="雷霆"
                android:textColor="@color/primary_text"
                android:textSize="14dp" />
        </RelativeLayout>

        <com.yuyh.library.view.list.NoScrollListView
            android:id="@+id/lvMaxPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tvHistoryMatchs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/title_layout"
            android:gravity="center"
            android:padding="3dp"
            android:text="历史对阵" />

        <com.yuyh.library.view.list.NoScrollListView
            android:id="@+id/lvHistoryMatchs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tvRecentMatchs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/title_layout"
            android:gravity="center"
            android:padding="3dp"
            android:text="近期战绩" />

        <com.yuyh.library.view.list.NoScrollListView
            android:id="@+id/lvRecentMatchs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tvFutureMatchs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/title_layout"
            android:gravity="center"
            android:padding="3dp"
            android:text="未来赛事" />

        <com.yuyh.library.view.list.NoScrollListView
            android:id="@+id/lvFutureMatchs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />


    </LinearLayout>


</ScrollView>